{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": ["dist/**", ".next/**", "build/**"]
        },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "lint": {
            "dependsOn": ["^build"],
            "outputs": [".biome/**"]
        },
        "format": {
            "outputs": [".biome/**"]
        },
        "typecheck": {
            "dependsOn": ["^build"]
        },
        "clean": {
            "cache": false
        }
    }
}
