---
import Section from "./ui/Section.astro"
import WorkCard from "./ui/WorkCard.astro"
import Grid from "./ui/Grid.astro"
import Stack from "./ui/Stack.astro"
import { Image } from "astro:assets"

import raporPendidikanImg from "../assets/works/rapor-pendidikan.png"
import siplahImg from "../assets/works/siplah.png"
import natatokoImg from "../assets/works/natatoko.png"

interface Project {
	title: string
	description: string
	color: string
	link: string
	image: ImageMetadata
}

const projects: Project[] = [
	{
		title: "Datapaw",
		description:
			"A data analytics platform that helps educational institutions analyze and visualize their performance metrics and assessment data.",
		color: "var(--color-pink-100)",
		link: "https://www.figma.com/community/plugin/1434312636542908147/datapaw-google-sheets-json-api-string-currency-number-fake-data-and-more",
		image: raporPendidikanImg
	},
	{
		title: "Ruang Murid",
		description:
			"An educational platform that provides students with a dedicated space to learn, collaborate, and access educational resources.",
		color: "var(--color-orange-400)",
		link: "https://rumah.pendidikan.go.id/ruang/murid",
		image: siplahImg
	},
	{
		title: "Rapor Pendidikan",
		description:
			"A comprehensive education reporting system that helps schools and institutions track and analyze student performance and educational outcomes.",
		color: "var(--color-blue-400)",
		link: "https://raporpendidikan.dikdasmen.go.id/login",
		image: natatokoImg
	},
	{
		title: "Natatoko",
		description:
			"An e-commerce platform that enables businesses to create and manage their online stores with powerful inventory and sales management tools.",
		color: "#B08DCC",
		link: "https://natatoko.com/",
		image: raporPendidikanImg
	},
	{
		title: "Rapor Pendidikan Publik",
		description:
			"A public-facing education reporting platform that provides transparent access to educational performance data and institutional metrics.",
		color: "var(--color-green-300)",
		link: "https://data.dikdasmen.go.id/publikasi/pendidikan/asesmen-nasional-and-rapor-pendidikan?sub-topik=rapor-pendidikan-indonesia",
		image: raporPendidikanImg
	}
]
---

<Section title="Selected Work" class="pt-4 lg:pt-[6rem]">
	<Stack gap="xl" class="p-6 pr-6 lg:pr-12">
		<Grid cols="grid-cols-1 md:grid-cols-2" gap="gap-6">
			{
				projects
					.slice(0, 2)
					.map((project) => (
						<WorkCard
							title={project.title}
							description={project.description}
							color={project.color}
							link={project.link}
							image={project.image}
							className="work-card group"
						/>
					))
			}
		</Grid>

		<WorkCard
			title={projects[2].title}
			description={projects[2].description}
			color={projects[2].color}
			link={projects[2].link}
			image={projects[2].image}
			className="work-card group"
		/>

		<Grid cols="grid-cols-1 md:grid-cols-2" gap="gap-6">
			{
				projects
					.slice(3, 5)
					.map((project) => (
						<WorkCard
							title={project.title}
							description={project.description}
							color={project.color}
							link={project.link}
							image={project.image}
							className="work-card group"
						/>
					))
			}
		</Grid>
	</Stack>
</Section>

<style>
	.work-card :global(div.card-content) {
		padding-top: 1.5rem;
	}
</style>
