---
interface Props {
  title: string;
  subtitle?: string;
}

const { title, subtitle } = Astro.props;
---

<section class="py-16">
  <div class="container mx-auto px-4">
    <h2 class="text-4xl font-display mb-4 js-title">{title}</h2>
    {subtitle && <p class="text-xl text-muted mb-8 js-subtitle">{subtitle}</p>}
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {[1, 2, 3].map(() => (
        <div class="bg-primary/5 p-6 rounded-lg js-card">
          <h3 class="text-xl font-display mb-2">Feature Title</h3>
          <p class="text-muted">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor incididunt ut labore.</p>
        </div>
      ))}
    </div>
  </div>
</section>

<script>
  import { fadeInUp, textReveal, staggerFadeIn } from '../utils/animations';

  // Animate title
  const title = document.querySelector('.js-title');
  if (title) textReveal(title);

  // Animate subtitle
  const subtitle = document.querySelector('.js-subtitle');
  if (subtitle) fadeInUp(subtitle, 0.1);

  // Animate cards
  const cards = document.querySelectorAll('.js-card');
  if (cards.length) staggerFadeIn(Array.from(cards), 0.1, 0.2);
</script> 