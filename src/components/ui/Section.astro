---
interface Props {
	title?: string
	class?: string
	titleClass?: string
	hasDivider?: boolean
	[x: string]: any
}

const {
	title,
	class: className = "",
	titleClass = "",
	hasDivider = true,
	...rest
} = Astro.props

const sectionClasses = `w-full ${className}`
const titleClasses = `text-sm font-mono font-normal uppercase text-primary ${titleClass} mb-4`
---

<section class={sectionClasses} {...rest}>
	{
		title && (
			<div class="section-header">
				<div class="pl-[1.5rem] pt-4 md:pt-[6rem] pb-3">
					<h2 class={titleClasses}>{title}</h2>
				</div>
				{hasDivider && <div class="border-b border-border" />}
			</div>
		)
	}

	<slot />
</section>

<style>
	section {
		position: relative;
	}

	section .border-b {
		position: relative;
	}

	@media (min-width: 1440px) {
		section .border-b::after {
			content: "";
			position: absolute;
			top: 0;
			left: 100%;
			width: 9999px;
			height: 100%;
			border-bottom: 1px solid var(--border-default);
		}
	}
</style>
