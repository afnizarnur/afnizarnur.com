---
interface Props {
	as?: string
	size?: "sm" | "md" | "lg" | "xl" | "full"
	class?: string
	[x: string]: any
}

const {
	as: Tag = "div",
	size = "lg",
	class: className = "",
	...rest
} = Astro.props

const sizes = {
	sm: "max-w-screen-sm",
	md: "max-w-screen-md",
	lg: "max-w-screen-lg",
	xl: "max-w-screen-xl",
	full: "max-w-full"
}

const classes = `mx-auto px-4 sm:px-6 ${sizes[size]} ${className}`
---

<Tag class={classes} {...rest}>
	<slot />
</Tag>
