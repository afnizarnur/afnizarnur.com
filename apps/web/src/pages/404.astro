---
import BaseLayout from "../layouts/BaseLayout.astro"
import PageHeader from "../components/PageHeader.astro"
---

<BaseLayout title="Page Not Found">
    <section class="page-shell page-shell--flush">
        <div class="surface-panel">
            <PageHeader
                orientation="center"
                title="Page not found"
                description="The page you're looking for doesn't exist or has been moved."
                actions={[
                    { href: "/", label: "Go home" },
                    { href: "/work", label: "View projects", variant: "secondary" },
                ]}
            >
                <span slot="eyebrow" class="text-6xl font-bold text-fgColor-primary">404</span>
                <p class="text-fgColor-tertiary">
                    Double-check the URL or head back to the homepage to continue exploring.
                </p>
            </PageHeader>
        </div>
    </section>
</BaseLayout>
