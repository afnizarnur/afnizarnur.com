---
import BaseLayout from "../layouts/BaseLayout.astro"
---

<BaseLayout title="Page Not Found">
    <div class="mx-auto max-w-7xl px-4 py-32 sm:px-6 lg:px-8">
        <div class="text-center">
            <h1 class="text-6xl font-bold text-fgColor-primary">404</h1>
            <p class="mt-4 text-xl text-fgColor-secondary">Page not found</p>
            <p class="mt-2 text-fgColor-tertiary">
                The page you're looking for doesn't exist or has been moved.
            </p>
            <div class="mt-8 flex justify-center gap-4">
                <a
                    href="/"
                    class="inline-flex items-center rounded-md bg-bgColor-accent-solid px-4 py-2 text-sm font-medium text-fgColor-white hover:bg-bgColor-accent-solid-hover"
                >
                    Go home
                </a>
                <a
                    href="/work"
                    class="inline-flex items-center rounded-md border border-borderColor-primary bg-bgColor-primary px-4 py-2 text-sm font-medium text-fgColor-primary hover:bg-bgColor-secondary"
                >
                    View projects
                </a>
            </div>
        </div>
    </div>
</BaseLayout>
