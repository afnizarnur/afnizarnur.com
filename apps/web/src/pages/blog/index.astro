---
import BaseLayout from "../../layouts/BaseLayout.astro"
import { PostCard } from "@afnizarnur/ui"
import { getAllPosts } from "../../server/data"
import PageHeader from "../../components/PageHeader.astro"

const posts = await getAllPosts()
---

<BaseLayout
    title="Blog"
    description="Articles about design systems, frontend development, and product design."
>
    <section class="page-shell">
        <PageHeader
            eyebrow="Journal"
            title="Blog"
            description="Thoughts on design systems, frontend development, and product design."
        />

        {
            posts && posts.length > 0 ? (
                <div class="grid grid-cols-1 gap-24 md:grid-cols-2 lg:grid-cols-3">
                    {posts.map((post) => (
                        <PostCard
                            client:load
                            title={post.title}
                            slug={post.slug}
                            excerpt={post.excerpt}
                            publishedAt={post.publishedAt}
                            coverImage={post.coverImage}
                            coverImageAlt={post.coverImageAlt}
                            tags={post.tags}
                        />
                    ))}
                </div>
            ) : (
                <p class="text-fgColor-secondary">No blog posts yet. Check back soon!</p>
            )
        }
    </section>
</BaseLayout>
