---
import BaseLayout from "./BaseLayout.astro"
import type { Project } from "@afnizarnur/ui"

export interface Props {
    project: Project
}

const { project } = Astro.props

const seoTitle = project.seo?.title || project.title
const seoDescription = project.seo?.description || project.description
const ogImage = project.gallery && project.gallery.length > 0 ? project.gallery[0].url : undefined
---

<BaseLayout title={seoTitle} description={seoDescription} ogImage={ogImage} type="article">
    <article class="mx-auto max-w-4xl px-4 py-16 sm:px-6 lg:px-8">
        <!-- Project Header -->
        <header class="mb-12">
            {project.year && <p class="text-sm text-fgColor-tertiary">{project.year}</p>}
            <h1 class="mt-2 text-4xl font-bold text-fgColor-primary sm:text-5xl">
                {project.title}
            </h1>
            <p class="mt-4 text-xl text-fgColor-secondary">{project.description}</p>

            <!-- Role & Client -->
            <div class="mt-6 flex flex-wrap gap-4">
                {
                    project.role && project.role.length > 0 && (
                        <div>
                            <p class="text-sm font-semibold text-fgColor-primary">Role</p>
                            <p class="text-sm text-fgColor-secondary">{project.role.join(", ")}</p>
                        </div>
                    )
                }
                {
                    project.client && (
                        <div>
                            <p class="text-sm font-semibold text-fgColor-primary">Client</p>
                            <p class="text-sm text-fgColor-secondary">{project.client}</p>
                        </div>
                    )
                }
            </div>

            <!-- Technologies -->
            {
                project.technologies && project.technologies.length > 0 && (
                    <div class="mt-6">
                        <p class="text-sm font-semibold text-fgColor-primary mb-2">Technologies</p>
                        <div class="flex flex-wrap gap-2">
                            {project.technologies.map((tech) => (
                                <span class="rounded-full bg-bgColor-secondary px-3 py-1 text-sm text-fgColor-primary">
                                    {tech}
                                </span>
                            ))}
                        </div>
                    </div>
                )
            }

            <!-- External Links -->
            {
                project.links && project.links.length > 0 && (
                    <div class="mt-6 flex flex-wrap gap-4">
                        {project.links.map((link) => (
                            <a
                                href={link.url}
                                target="_blank"
                                rel="noopener noreferrer"
                                class="inline-flex items-center rounded-md bg-bgColor-accent-solid px-4 py-2 text-sm font-medium text-fgColor-white hover:bg-bgColor-accent-solid-hover"
                            >
                                {link.label}
                            </a>
                        ))}
                    </div>
                )
            }
        </header>

        <!-- Project Content -->
        <div class="prose prose-lg prose-neutral max-w-none">
            <slot />
        </div>

        <!-- Gallery -->
        {
            project.gallery && project.gallery.length > 1 && (
                <div class="mt-12">
                    <h2 class="text-2xl font-bold text-fgColor-primary mb-6">Gallery</h2>
                    <div class="grid grid-cols-1 gap-6 md:grid-cols-2">
                        {project.gallery.slice(1).map((image) => (
                            <figure>
                                <img
                                    src={`${image.url}?w=800&auto=format`}
                                    alt={image.alt || ""}
                                    class="rounded-lg"
                                    loading="lazy"
                                />
                                {image.caption && (
                                    <figcaption class="mt-2 text-sm text-fgColor-tertiary">
                                        {image.caption}
                                    </figcaption>
                                )}
                            </figure>
                        ))}
                    </div>
                </div>
            )
        }
    </article>
</BaseLayout>
