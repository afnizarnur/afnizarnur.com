---
interface Props {
    // eslint-disable-next-line @typescript-eslint/no-explicit-any
    icon: any
    ariaLabel: string
    size?: number
    className?: string
}

const { icon: Icon, ariaLabel, size = 24, className = "" } = Astro.props
---

<button
    class={`w-[40px] h-[40px] p-[8px] flex items-center justify-center text-icon-secondary hover:text-icon-primary focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-icon-primary active:text-icon-primary transition-colors ${className}`}
    aria-label={ariaLabel}
    type="button"
>
    <Icon size={size} color="currentColor" />
</button>
