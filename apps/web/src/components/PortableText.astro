---
import { PortableText as AstroPortableText } from "astro-portabletext"
import type { PortableTextBlock } from "@afnizarnur/ui"

export interface Props {
    value: PortableTextBlock[]
}

const { value } = Astro.props
---

<div class="portable-text">
    <AstroPortableText value={value} />
</div>

<style>
    @reference "../styles/global.css";

    .portable-text :global(h2) {
        @apply mt-12 mb-4 text-3xl font-bold text-fgColor-primary;
    }

    .portable-text :global(h3) {
        @apply mt-8 mb-3 text-2xl font-bold text-fgColor-primary;
    }

    .portable-text :global(h4) {
        @apply mt-6 mb-2 text-xl font-bold text-fgColor-primary;
    }

    .portable-text :global(p) {
        @apply mb-4 text-fgColor-secondary leading-relaxed;
    }

    .portable-text :global(blockquote) {
        @apply border-l-4 border-borderColor-accent-primary pl-4 my-6 italic text-fgColor-tertiary;
    }

    .portable-text :global(ul) {
        @apply list-disc pl-6 mb-4 space-y-2;
    }

    .portable-text :global(ol) {
        @apply list-decimal pl-6 mb-4 space-y-2;
    }

    .portable-text :global(li) {
        @apply text-fgColor-secondary;
    }

    .portable-text :global(strong) {
        @apply font-semibold;
    }

    .portable-text :global(em) {
        @apply italic;
    }

    .portable-text :global(code) {
        @apply rounded bg-bgColor-secondary px-1.5 py-0.5 text-sm font-mono text-fgColor-primary;
    }

    .portable-text :global(pre) {
        @apply overflow-x-auto rounded-lg bg-bgColor-black-solid p-4 my-6;
    }

    .portable-text :global(pre code) {
        @apply text-sm text-fgColor-white bg-transparent p-0;
    }

    .portable-text :global(a) {
        @apply text-fgColor-accent-primary hover:text-fgColor-accent-primary-hover underline;
    }

    .portable-text :global(img) {
        @apply rounded-lg w-full my-8;
    }

    .portable-text :global(figure) {
        @apply my-8;
    }

    .portable-text :global(figcaption) {
        @apply mt-2 text-center text-sm text-fgColor-tertiary;
    }
</style>
