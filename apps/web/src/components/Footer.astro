---
import type { NavigationItem, SocialLinks } from "@afnizarnur/ui"

export interface Props {
    navigationItems?: NavigationItem[]
    socialLinks?: SocialLinks
}

const { navigationItems, socialLinks } = Astro.props
const currentYear = new Date().getFullYear()
---

<footer class="border-t border-borderColor-secondary bg-bgColor-primary">
    <div class="mx-auto max-w-7xl px-16 py-60 sm:px-24 lg:px-32">
        <div class="grid gap-32 md:grid-cols-[2fr_1fr_1fr]">
            <div class="space-y-12">
                <span class="inline-flex items-center gap-8 rounded-full bg-bgColor-accent-primary px-12 py-4 text-xs font-medium text-fgColor-accent-primary"
                    >Let's collaborate</span
                >
                <div class="space-y-4">
                    <h3 class="text-2xl font-semibold text-fgColor-primary">
                        Afnizar Nur Ghifari
                    </h3>
                    <p class="text-fgColor-secondary">
                        Product designer and developer crafting intentional experiences for
                        digital products and design systems.
                    </p>
                </div>
            </div>

            {
                navigationItems && navigationItems.length > 0 && (
                    <div class="space-y-12">
                        <h4 class="text-sm font-semibold uppercase tracking-wide text-fgColor-tertiary">
                            Navigate
                        </h4>
                        <ul class="grid gap-8">
                            {navigationItems.map((item) => {
                                const href = item.href.startsWith("http")
                                    ? item.href
                                    : item.href.startsWith("/")
                                      ? item.href
                                      : `/${item.href}`
                                return (
                                    <li>
                                        <a
                                            href={href}
                                            target={item.newTab ? "_blank" : undefined}
                                            rel={
                                                item.newTab ? "noopener noreferrer" : undefined
                                            }
                                            class="inline-flex items-center gap-8 text-sm font-medium text-fgColor-secondary transition-colors hover:text-fgColor-primary"
                                        >
                                            {item.title}
                                        </a>
                                    </li>
                                )
                            })}
                        </ul>
                    </div>
                )
            }

            {
                socialLinks && (
                    <div class="space-y-12">
                        <h4 class="text-sm font-semibold uppercase tracking-wide text-fgColor-tertiary">
                            Connect
                        </h4>
                        <ul class="grid gap-8">
                            {socialLinks.twitter && (
                                <li>
                                    <a
                                        href={`https://twitter.com/${socialLinks.twitter}`}
                                        target="_blank"
                                        rel="noopener noreferrer"
                                        class="inline-flex items-center gap-8 text-sm font-medium text-fgColor-secondary transition-colors hover:text-fgColor-primary"
                                    >
                                        Twitter
                                    </a>
                                </li>
                            )}
                            {socialLinks.github && (
                                <li>
                                    <a
                                        href={`https://github.com/${socialLinks.github}`}
                                        target="_blank"
                                        rel="noopener noreferrer"
                                        class="inline-flex items-center gap-8 text-sm font-medium text-fgColor-secondary transition-colors hover:text-fgColor-primary"
                                    >
                                        GitHub
                                    </a>
                                </li>
                            )}
                            {socialLinks.linkedin && (
                                <li>
                                    <a
                                        href={socialLinks.linkedin}
                                        target="_blank"
                                        rel="noopener noreferrer"
                                        class="inline-flex items-center gap-8 text-sm font-medium text-fgColor-secondary transition-colors hover:text-fgColor-primary"
                                    >
                                        LinkedIn
                                    </a>
                                </li>
                            )}
                            {socialLinks.email && (
                                <li>
                                    <a
                                        href={`mailto:${socialLinks.email}`}
                                        class="inline-flex items-center gap-8 text-sm font-medium text-fgColor-secondary transition-colors hover:text-fgColor-primary"
                                    >
                                        Email
                                    </a>
                                </li>
                            )}
                        </ul>
                    </div>
                )
            }
        </div>

        <div class="mt-48 flex flex-col gap-16 border-t border-borderColor-secondary pt-24 text-sm text-fgColor-tertiary md:flex-row md:items-center md:justify-between">
            <p>Â© {currentYear} Afnizar Nur Ghifari. All rights reserved.</p>
            <p>
                Built with care using Astro, Sanity, and a custom design system powered by
                tokens.
            </p>
        </div>
    </div>
</footer>
